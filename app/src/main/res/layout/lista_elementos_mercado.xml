<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardview_elementos_mercado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagen_elemento_mercado"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_launcher_background">
        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/nombreElementoMercado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de producto"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/precioElementoMercado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio del producto"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/comprarElementoMercado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprar"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>




</androidx.cardview.widget.CardView>